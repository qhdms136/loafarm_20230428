<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.loafarm.comment.dao.CommentMapper">
	<insert id="insertComment" parameterType="map">
		INSERT INTO `comment`
		(
			`postId`
			, `userId`
			, `content`
			, `type`
			, `createdAt`
			, `updatedAt`
		)
		VALUES
		(
			#{postId}
			, #{userId}
			, #{content}
			, #{type}
			, NOW()
			, NOW()
		)
	</insert>
	<select id="selctCommentListByPostIdType" parameterType="map" resultType="com.loafarm.comment.model.Comment">
		SELECT
			`id`
			, `postId`
			, `userId`
			, `content`
			, `type`
			, `createdAt`
			, `updatedAt`
		FROM
			`comment`
		WHERE
			`postId` = #{postId}
			AND `type` = #{type}	
	</select>
	<delete id="deleteComment" parameterType="int">
		DELETE
		FROM
			`comment`
		WHERE
			`id` = #{id}
	</delete>
	<delete id="deleteCommentByPostIdType" parameterType="map">
		DELETE
		FROM
			`comment`
		WHERE
			`postId` = #{postId}
			AND `type` = #{type}
	</delete>
</mapper>