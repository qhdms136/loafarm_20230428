<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.loafarm.user.dao.UserMapper">
 	<select id="selectUserByLoginId" resultType="com.loafarm.user.model.User">
 		SELECT
 			`id`
			, `loginId`
			, `password`
			, `nickname`
			, `email`
			, `createdAt`
			, `updatedAt`
		FROM
			`user`
		WHERE
			`loginId` = #{loginId}	
 	</select>
 	<select id="selectUserByNickname" resultType="com.loafarm.user.model.User">
 		SELECT
 			`id`
			, `loginId`
			, `password`
			, `nickname`
			, `email`
			, `createdAt`
			, `updatedAt`
		FROM
			`user`
		WHERE
			`nickname` = #{nickname}	
 	</select>
 	<insert id="insertUser" parameterType="map">
 		INSERT INTO `user`
 		(
 			`loginId`
			, `nickname`
			, `password`
			, `email`
			, `createdAt`
			, `updatedAt`
 		)
 		VALUES
 		(
 			#{loginId}
 			, #{nickname}
 			, #{password}
 			, #{email}
 			, NOW()
 			, NOW()
 		)
 	</insert>
 	<update id="updateUserByPassword" parameterType="map">
 		UPDATE
 			`user`
 		SET
 			`password` = #{password}
 			,`updatedAt` = NOW()
 		WHERE
 			`loginId` = #{loginId}
 	</update>
 </mapper>