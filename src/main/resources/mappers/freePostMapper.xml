<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.loafarm.freepost.dao.FreePostMapper">
	<insert id="insertFreePost" parameterType="map">
		INSERT INTO `free_post`
		(
			`userId`
			, `category`
			, `subject`
			, `content`
			, `type`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		)
		VALUES
		(
			#{userId}
			, #{category}
			, #{subject}
			, #{content}
			, #{type}
			, #{imagePath}
			, NOW()
			, NOW()
		)
	</insert>
	<select id="selectFreePostList" resultType="com.loafarm.freepost.model.FreePost">
		SELECT
			`id`
			, `userId`
			, `category`
			, `subject`
			, `content`
			, `type`
			, `recommendCount`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		FROM
			`free_post`
		ORDER BY
			`id` DESC
	</select>
	<select id="selectFreePostListByCategory" resultType="com.loafarm.freepost.model.FreePost">
		SELECT
			`id`
			, `userId`
			, `category`
			, `subject`
			, `content`
			, `type`
			, `recommendCount`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		FROM
			`free_post`
		WHERE
			`category` = #{category}
		ORDER BY
			`id` DESC
	</select>
	<select id="selectFreePostById" parameterType="int" resultType="com.loafarm.freepost.model.FreePost">
		SELECT
			`id`
			, `userId`
			, `category`
			, `subject`
			, `content`
			, `type`
			, `recommendCount`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		FROM
			`free_post`
		WHERE
			`id` = #{freePostId}
	</select>
	<select id="selectFreePostByPostIdUserId" parameterType="map" resultType="com.loafarm.freepost.model.FreePost">
		SELECT
			`id`
			, `userId`
			, `category`
			, `subject`
			, `content`
			, `type`
			, `recommendCount`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		FROM
			`free_post`
		WHERE
			`id` = #{freePostId}
			AND `userId` = #{userId}
	</select>
	<update id="updateRecommendCount" parameterType="map">
		UPDATE `free_post`
		SET
			`recommendCount` = #{recommendCount}
		WHERE
			`id` = #{freePostId}
			AND `type` = #{type}
	</update>
	<update id="updateFreePostByPostId" parameterType="map">
		UPDATE `free_post`
		SET
			`category` = #{category}
			, `subject` = #{subject}
			, `content` = #{content}
			, `updatedAt` = NOW()
			<!-- 이미지패스 있을때만 수정 -->
			<if test="imagePath != null">
			, `imagePath` = #{imagePath}
			</if>
		WHERE
			`id` = #{freePostId}
	</update>
	<update id="deleteImageAndUpdateByPostIdUserId" parameterType="map">
		UPDATE `free_post`
		SET
			`imagePath` = NULL
		WHERE
			`id` = #{freePostId}
			AND `userId` = #{userId}
	</update>
	<delete id="deletePostByPostIdUserId" parameterType="map">
		DELETE
		FROM
			`free_post`
		WHERE
			`id` = #{freePostId}
			AND `userId` = #{userId}
	</delete>
</mapper>